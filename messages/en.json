  "features": {
    "title": "Features",
    "1": {
      "title": "Track your time",
      "description": "Clockit is a time tracking app that helps you track your time while working remotely. It's easy to use and free to use."
    },
    "2": {
      "title": "Take unlimited breaks",
      "description": "Take unlimited breaks with Clockit. You can take as many breaks as you want, and Clockit will track your time for you."
    },
    "3": {
      "title": "Generate reports",
      "description": "Generate reports with Clockit. You can generate of all employees in your company."
    },
    "4": {
      "title": "Easy to use",
      "description": "No need to download any software. Just use your browser and start tracking your time."
    },
    "5": {
      "title": "Free to use",
      "description": "No need to pay for a subscription. Just use the app and start tracking your time."
    },
    "6": {
      "title": "Secure",
      "description": "Your data is secure and encrypted. We don't sell your data to anyone."
    }
