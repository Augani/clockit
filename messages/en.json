  "about": {
    "title": "About",
    "purpose": {
      "title": "Why We Built This",
      "description": "Clockit was created to simplify time tracking and task management for remote teams and organizations. We understand the challenges of managing distributed workforces and ensuring accurate time reporting for payroll and project management.",
      "useCase": {
        "title": "How It Works",
        "description": "Our platform allows employees to easily track their working hours and tasks in real-time. Organizations can monitor project progress, generate detailed reports, and streamline their payroll process with accurate time data. Perfect for both small teams and large enterprises looking to optimize their workforce management."
      },
      "vision": {
        "title": "Our Vision",
        "description": "We're committed to making time tracking and task management seamless and transparent for everyone. Whether you're an employee looking to track your hours or a manager overseeing multiple teams, Clockit provides the tools you need to work efficiently and maintain accountability."
      }
    },
    "creator": {
      "name": "Augustus Otu",
      "role": "Founder & Lead Developer",
      "description": "Full-stack developer with extensive experience in workforce management solutions. Having worked with remote teams and organizations, I understand the importance of reliable time tracking systems and am dedicated to creating tools that make work management easier for both employees and employers."
    }
  },
